<div class="container">
    <div class="jumbotron">
        <h2>LOGIN</h2>
    </div>
    <form method="POST" action="/users/login">
        <div class="form-group">
            <label for="input-username">Username</label>
            <input type="text" class="form-control" id="input-username" placeholder="Username" name="username">
        </div>
        <div class="form-group">
            <label for="input-pass">Password</label>
            <input type="password" class="form-control" id="input-pass" placeholder="Password" name="password">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>
