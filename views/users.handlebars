<div class="container">
    <table class="table table-striped">
        <thead class="thead-default">
        <tr>
            <th>#</th></th>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
        </tr>
        </thead>
        <tbody>
        {{#if users}}
            {{#each users}}
                <tr>
                    <th scope="row">{{increment @index}}</th>
                    <td>{{username}}</td>
                    <td>{{email}}</td>
                    <td>{{role}}</td>

                </tr>
            {{/each}}
        {{/if}}
        </tbody>
    </table>


</div>